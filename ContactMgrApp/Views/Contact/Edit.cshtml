@model Contact
	
@{ 
	ViewBag.Title = $"{ViewBag.Action} Contact";
}

<h2>@ViewBag.Action Contact</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Edit" method="post">
	<input type="hidden" asp-for="ContactID" />

	<div class="form-group">
		<label asp-for="FirstName">First Name:</label>
		<input asp-for="FirstName" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="LastName">Last Name:</label>
		<input asp-for="LastName" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Phone">Phone:</label>
		<input asp-for="Phone" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Email">Email:</label>
		<input asp-for="Email" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="CategoryID">Category: </label>
		<select asp-for="CategoryID" class="form-control">
			<option value="0">Select a Category</option>
			@foreach (Category c in ViewBag.Categories)
			{
				<option value="@c.CategoryID">@c.Name</option>
			}
		</select>
	</div>
	<div class="form-control">
		<label asp-for="Orginazation">Organization</label>
		<input asp-for="Orginazation" class="form-control" />
	</div>

	<button type="submit" class="btn btn-dark">@ViewBag.Action</button>
	@if (ViewBag.Action =="Edit")
	{
		<a asp-action="Details" asp-controller="Contact"
		   asp-route-id="@Model.ContactID" asp-route-slug="@Model.Slug"
		   class="btn btn-dark">Cancel</a>
	}
	else
	{
		<a asp-action="Index" asp-controller="Home"
		   class="btn btn-dark">Cancel</a>
	}
</form>
